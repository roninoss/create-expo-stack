---
import { OPEN_GRAPH, SITE } from "../../config";
import { SITE_URL } from "@utils/siteUrl";

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);

//TODO: Uncomment when implementing auto OG image generation
// const imageUrl = SITE_URL+"/api/og"

//TODO: Remove when implementing auto OG image generation
const imageUrl = SITE_URL + "/og-image.png";
---

<!-- Page Metadata -->
<link rel="canonical" href={canonicalUrl} />
<meta name="description" property="og:description" content={SITE.description} />

<!-- OpenGraph Tags -->
<meta property="og:title" content={SITE.title} />
<meta property="og:description" content={SITE.description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:alt" content={OPEN_GRAPH.image.alt} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- Twitter Tags -->
<meta name="twitter:image" content={imageUrl} />
<meta name="twitter:image:alt" content={OPEN_GRAPH.image.alt} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="Create Expo Stack" />
<meta
  name="twitter:description"
  content="The easiest way to create a React Native app with Expo"
/>
