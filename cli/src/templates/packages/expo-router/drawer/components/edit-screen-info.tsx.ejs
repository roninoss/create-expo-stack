        alignItems: 'center',
        marginHorizontal: 20,
        marginTop: 15
    },
    helpLink: {
        paddingVertical: 15
    },
    helpLinkText: {
        textAlign: 'center'
    },
    homeScreenFilename: {
        marginVertical: 7
    }
    });
<% } %>